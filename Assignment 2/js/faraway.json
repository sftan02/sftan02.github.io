{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {"resize": true},
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "vconcat": [
    {
      "hconcat": [
        {
          "width": 800,
          "height": 400,
          "title": "Happiness Score of Faraway Countries",
          "data": {
            "url": "https://raw.githubusercontent.com/sftan02/sftan02.github.io/main/Assignment%202/data/Country_happiness_dataset.csv"
          },
          "transform": [
            {
              "filter": "datum.Country == 'China' || datum.Country == 'Finland' || datum.Country == 'Brazil' || datum.Country == 'Australia' || datum.Country == 'Malaysia' ||  datum.Country == 'United States of America'"
            }
          ],
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "Happiness_Score",
              "type": "quantitative",
              "title": "Happiness Score"
            },
            "x": {
              "field": "Country",
              "type": "nominal",
              "sort": {
                "field": "Happiness_Score",
                "op": "average",
                "order": "descending"
              },
              "title": "Country"
            }
          }
        }
      ]
    }
  ],
  "config": {
    "title": {"font": "sans-serif", "fontSize": 16},
    "axis": {"labelFont": "sans-serif"},
    "text": {"font": "sans-serif", "fontSize": 13, "fontWeight": "bold"}
  }
}
