{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/sftan02/sftan02.github.io/main/Assignment%202/data/Country_happiness_dataset_cleaned.csv"
  },
  "vconcat": [
    {
      "title": "HAPPINESS LEVEL OF THE WORLD",
      "width": "container",
      "height": 500,
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data":{
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "transform": [
            {
              "lookup": "Country",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "key": "properties.NAME"
              }, "as": "geo"
            },
            {"filter": {"param": "time_brush"}},
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "params": [
            {
              "name": "countrySelection",
              "select": {
                "type": "point"
              }
            }
          ],
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": "Happiness_Score",
              "type": "quantitative",
              "title": "Happiness Level",
              "legend":{
                "labelAlign":"center",
                "titleAlign":"center",
                "titleAnchor":"middle"
              },
              "scale": {"domain": [0, 10], "scheme": "darkred"}
            },
            "tooltip": [
              {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "Happiness_Score", 
                "type": "quantitative",
                "title": "Happiness Score",
                "format": ".2f"
              },
              {
                "field": "Happiness_Rank", 
                "type": "quantitative",
                "title": "Happiness Rank"
              },
              {
                "field": "GDP_per_capita", 
                "type": "quantitative",
                "title": "GDP per capita",
                "format": ".2f"
              },
              {
                "field": "Freedom_to_make_life_choices", 
                "type": "quantitative",
                "title": "Freedom to make life choices",
                "format": ".2f"
              },
              {
                "field": "Generosity", 
                "type": "quantitative",
                "title": "Generosity",
                "format": ".2f"
              },
              {
                "field": "Perceptions_of_corruption", 
                "type": "quantitative",
                "title": "Perceptions of corruption",
                "format": ".2f"
              },
            ]
          },
        },
        {
          "transform": [
            {
              "lookup": "Country",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/countryInfo.csv"
                },
                "key": "name",
                "fields": ["latitude", "longitude"]
              }
            }
          ],
          "mark": {"type": "text"},
          "encoding": {
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "text": {"field": "Country", "type": "nominal"},
            "opacity": {
              "condition": {
                "test": "datum['Country'] == 'China' || datum['Country'] == 'Brazil' || datum['Country'] == 'Australia' || datum['Country'] == 'Malaysia' ||  datum['Country'] == 'United States of America'",
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    },
    {
      "hconcat": [
        {
          "width": "container",
          "height": 300,
          "layer": [
            {
              "mark": {"type": "area", "color": "#f8c16e"},
              "title": "AVERAGE HAPPINESS SCORE OF THE WORLD OVER THE TIME",
              "params": [
                {
                  "name": "time_brush",
                  "select": {"type": "interval", "encodings": ["x"]}
                }
              ],
              "transform": [
                {
                  "lookup": "Country",
                  "from":{
                    "data":{
                      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                    }, "key": "properties.NAME"
                  }, "as": "geo"
                },
              ],
              "encoding": {
                "x": {
                  "field": "Year", 
                  "axis": {"title": "Years", "format": "%Y", "grid": false, "tickCount":"year"}, 
                  "timeUnit": "yearmonth"
                },
                "y": {
                  "field": "Happiness_Score",
                  "aggregate": "mean",
                  "axis": {"tickCount": 5, "grid": false},
                  "scale": {"domain": [5.2, 5.6]},
                  "title": "Sum of Happiness Score"
                },
                "tooltip":{
                  "field": "Happiness_Score",
                  "aggregate": "mean",
                  "title": "Happiness Score",
                  "format": ".2f"
                }
              }
            },
            {
              "mark":{
                "type": "text",
                "fontSize": 12,
                "dy": -100,
                "dx": 250,
                "fontStyle": "italic",
                "color": "black"
              },
              "encoding": {
                "text":{
                  "value": "The year 2021 has the highest average happiness score"
                }
              }
            },
            {
              "mark":{
                "type": "text",
                "fontSize": 12,
                "dy": 120,
                "dx": -150,
                "fontStyle": "italic",
                "color": "black"
              },
              "encoding": {
                "text":{
                  "value": "The year 2017 has the lowest average happiness score"
                }
              }
            },            
          ]
        }
      ]
    }
  ],
  "config": {
    "title": {"font": "Verdana", "fontSize": 16},
    "axis": {"labelFont": "Verdana"},
    "text": {"font": "Verdana", "fontSize": 13,}
  }
}