{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {"resize": true},
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "vconcat": [
    {
      "title": "Happiness Level of the World",
      "width": "container",
      "height": 400,
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/sftan02/sftan02.github.io/main/Assignment%202/data/Country_happiness_dataset.csv"
                },
                "key": "Country",
                "fields": ["Happiness_Score", "Year"]
              }
            },
            {"calculate": "datum.Happiness_Score", "as": "Happiness_Score"},
            {"calculate": "datum.Year", "as": "Year"},
            {"filter": {"param": "time_brush"}}
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "params": [{"name": "countrySelection", "select": {"type": "point"}}],
          "encoding": {
            "color": {
              "field": "Happiness_Score",
              "type": "quantitative",
              "title": "Happiness_Score",
              "scale": {"domain": [0, 10]}
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {"field": "Happiness_Score", "type": "quantitative"},
              {"field": "Year", "type": "ordinal"}
            ]
          }
        },
        {
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/countryInfo.csv"
                },
                "key": "name",
                "fields": ["latitude", "longitude"]
              }
            }
          ],
          "mark": {"type": "text"},
          "encoding": {
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "text": {"field": "properties.NAME", "type": "nominal"},
            "opacity": {
              "condition": {
                "test": "datum['properties.NAME'] == 'China' || datum['properties.NAME'] == 'Brazil' || datum['properties.NAME'] == 'Australia' || datum['properties.NAME'] == 'Malaysia' ||  datum['properties.NAME'] == 'United States of America'",
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    },
    {
      "hconcat": [
        {
          "width": 400,
          "height": 20,
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/sftan02/sftan02.github.io/main/Assignment%202/data/Country_happiness_dataset.csv"
                },
                "key": "Country",
                "fields": ["Happiness_Score", "Year", "Healthy_life_expectancy"]
              }
            },
            {
              "calculate": "datum.Healthy_life_expectancy",
              "as": "Healthy_life_expectancy"
            },
            {"filter": {"param": "countrySelection", "empty": false}},
            {"filter": {"param": "time_brush"}}
          ],
          "mark": {"type": "bar"},
          "encoding": {
            "x": {
              "field": "Healthy_life_expectancy",
              "type": "quantitative",
              "title": "Logged Life Expectancy",
              "aggregate": "sum",
              "scale": {"domain": [0, 1]}
            },
            "y": {"field": "properties.NAME", "type": "nominal", "title": null}
          }
        },
        {
          "width": 400,
          "height": 20,
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/sftan02/sftan02.github.io/main/Assignment%202/data/Country_happiness_dataset.csv"
                },
                "key": "Country",
                "fields": [
                  "Happiness_Score",
                  "Year",
                  "Freedom_to_make_life_choices"
                ]
              }
            },
            {
              "calculate": "datum.Freedom_to_make_life_choices",
              "as": "Freedom_to_make_life_choices"
            },
            {"filter": {"param": "countrySelection", "empty": false}},
            {"filter": {"param": "time_brush"}}
          ],
          "mark": {"type": "bar"},
          "encoding": {
            "x": {
              "field": "Freedom_to_make_life_choices",
              "type": "quantitative",
              "title": "Logged Freedom to make life choices",
              "aggregate": "sum",
              "scale": {"domain": [0, 1]}
            },
            "y": {"field": "properties.NAME", "type": "nominal", "title": null}
          }
        }
      ]
    },
    {
      "hconcat": [
        {
          "width": 1000,
          "height": 300,
          "data": {
            "url": "https://raw.githubusercontent.com/sftan02/sftan02.github.io/main/Assignment%202/data/Country_happiness_dataset.csv"
          },
          "mark": {"type": "area", "color": "#faca81"},
          "title": "Economy of the world over the time",
          "params": [
            {
              "name": "time_brush",
              "select": {"type": "interval", "encodings": ["x"]}
            }
          ],
          "encoding": {
            "x": {"field": "Year", "axis": {"title": "Years"}},
            "y": {
              "field": "GDP_per_capita",
              "aggregate": "sum",
              "axis": {"tickCount": 5, "grid": false},
              "scale": {"type": "log", "domain": [120, 155]},
              "title": "Economy of the World (Logged GDP Per Capita)"
            }
          }
        }
      ]
    }
  ],
  "config": {
    "title": {"font": "sans-serif", "fontSize": 16},
    "axis": {"labelFont": "sans-serif"},
    "text": {"font": "sans-serif", "fontSize": 13, "fontWeight": "bold"}
  }
}